{
  "name": "electron-template",
  "productName": "electron-template",
  "version": "1.0.0",
  "description": "My Electron application description",
  "main": "dist-electron/main.js",
  "scripts": {
    "start": "npm run dev",
    "dev": "npm-run-all --parallel dev:renderer start:electron",
    "dev:renderer": "vite --config vite.renderer.config.ts",
    "start:electron": "npm run check && npm run build:electron && electron-forge start",
    "build:renderer": "vite build --config vite.renderer.config.ts",
    "build:electron": "tsc -p tsconfig.electron.json",
    "build": "npm run build:renderer && npm run build:electron",
    "package": "npm run build && electron-forge package",
    "make": "npm run build && electron-forge make",
    "publish": "electron-forge publish",
    "lint": "eslint --ext .ts,.tsx .",
    "lint:fix": "eslint --ext .ts,.tsx . --fix",
    "ts-check:electron": "tsc --noEmit -p tsconfig.electron.json",
    "ts-check:renderer": "tsc --noEmit -p tsconfig.json",
    "check": "npm run lint && npm run ts-check:electron && npm run ts-check:renderer",
    "test:unit": "vitest",
    "test:e2e": "playwright test",
    "test": "npm run test:unit && npm run test:e2e",
    "prepare": "husky"
  },
  "keywords": [],
  "author": {
    "name": "alexis-forbes",
    "email": "a.forbes.gil@gmail.com"
  },
  "license": "MIT",
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ],
    "*.{json,js,ts,jsx,tsx,html}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npx lint-staged",
      "pre-push": "npm run check"
    }
  },
  "devDependencies": {
    "@playwright/test": "^1.48.0",
    "npm-run-all": "^4.1.5",
    "@electron-forge/cli": "^7.10.2",
    "@electron-forge/maker-deb": "^7.10.2",
    "@electron-forge/maker-rpm": "^7.10.2",
    "@electron-forge/maker-squirrel": "^7.10.2",
    "@electron-forge/maker-zip": "^7.10.2",
    "@electron-forge/plugin-auto-unpack-natives": "^7.10.2",
    "@electron-forge/plugin-fuses": "^7.10.2",
    "@electron/fuses": "^1.8.0",
    "@types/electron-squirrel-startup": "^1.0.2",
    "@types/react": "^19.2.6",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "@vitejs/plugin-react": "^4.7.0",
    "electron": "39.2.1",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jest": "^27.9.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-no-barrel-files": "^1.2.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.0",
    "prettier": "^3.5.3",
    "sass": "^1.94.1",
    "typescript": "^5.6.3",
    "vite": "^5.4.21",
    "vitest": "^4.0.10"
  },
  "dependencies": {
    "bootstrap": "^5.3.8",
    "electron-squirrel-startup": "^1.0.1",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "zustand": "^5.0.8"
  }
}

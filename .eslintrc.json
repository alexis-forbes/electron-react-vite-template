{
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "ignorePatterns": ["node_modules/**"],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/eslint-recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:import/recommended",
    "plugin:import/electron",
    "plugin:import/typescript",
    "plugin:react/recommended",
    "plugin:react-hooks/recommended",
    "plugin:jsx-a11y/recommended",
    "prettier"
  ],
  "parser": "@typescript-eslint/parser",
  "plugins": [
    "@typescript-eslint",
    "simple-import-sort",
    "react",
    "react-hooks",
    "no-barrel-files"
  ],
  "root": true,
  "rules": {
    "no-barrel-files/no-barrel-files": "error",
    // https://typescript-eslint.io/rules/no-unused-vars/
    "@typescript-eslint/no-unused-vars": "error",
    // It's safe to disable this rule in TypeScript projects.
    // https://eslint.org/docs/latest/rules/no-undef#handled_by_typescript
    "no-undef": "off",
    "simple-import-sort/imports": [
      "error",
      {
        /**
         * settings for sorting import according to this order:
         * 1. The "preact" imports
         * 2. Package imports, sorted by alphabetical order
         * 3. The named imports should be sorted in alphabetical order
         * 4. It should skip a line before relative imports that are in other folders
         * 5. It should skip a line before the imports that are in the current folder
         * source: https://dev.to/julioxavierr/sorting-your-imports-with-eslint-3ped
         */
        "groups": [
          // Packages `preact` related packages come first.
          ["^preact", "^@?\\w"],
          // Internal packages.
          ["^(@|components)(/.*|$)"],
          // Side effect imports.
          ["^\\u0000"],
          // Parent imports. Put `..` last.
          ["^\\.\\.(?!/?$)", "^\\.\\./?$"],
          // Other relative imports. Put same-folder imports and `.` last.
          ["^\\./(?=.*/)(?!/?$)", "^\\.(?!/?$)", "^\\./?$"],
          // Style imports.
          ["^.+\\.?(scss|css)$"]
        ]
      }
    ]
  },
  "overrides": [
    {
      "files": ["vitest.config.*"],
      "rules": {
        "import/no-unresolved": "off"
      }
    },
    {
      "files": ["vite.renderer.config.ts"],
      "rules": {
        "import/namespace": "off",
        "import/default": "off",
        "import/no-named-as-default": "off",
        "import/no-named-as-default-member": "off"
      }
    }
  ],
  "settings": {
    "react": {
      "version": "detect"
    },
    "jsx-a11y": {
      "components": {
        "Image": "img",
        "Button": "button"
      },
      "attributes": {
        "for": ["htmlFor", "for"]
      }
    }
  },
  "globals": {
    "NodeJS": true,
    "RequestInit": true
  }
}
